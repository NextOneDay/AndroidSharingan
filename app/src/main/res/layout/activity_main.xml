<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity"
  >


    <com.yuluyao.sharingan.Eye
      android:id="@+id/eye"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

    <com.yuluyao.sharingan.Sharingan
      android:id="@+id/sharingan"
      android:layout_width="120dp"
      android:layout_height="120dp"
      />

    <com.yuluyao.sharingan.Itachi
      android:id="@+id/itachi"
      android:layout_width="120dp"
      android:layout_height="120dp"
      />

    <FrameLayout
      android:layout_width="120dp"
      android:background="#33ff00ff"
      android:layout_height="160dp"
      >

        <com.yuluyao.sharingan.Sasuke
          android:id="@+id/sasuke"
          android:layout_marginTop="8dp"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />

    </FrameLayout>

</LinearLayout>